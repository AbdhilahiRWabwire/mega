<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="mega.privacy.android.app.MimeTypeList" />

        <variable
            name="item"
            type="mega.privacy.android.app.audioplayer.playlist.PlaylistItem" />

        <variable
            name="highlight"
            type="Boolean" />

        <variable
            name="itemOperation"
            type="mega.privacy.android.app.audioplayer.playlist.PlaylistItemOperation" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@{highlight ? @color/audio_player_main_bg : @color/audio_player_controller_bg }"
        android:onClick="@{() -> itemOperation.onItemClick(item)}">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:scaleType="fitCenter"
            app:defaultThumbnail="@{MimeTypeList.typeForName(item.nodeName).iconResourceId}"
            app:roundedCornerRadius="4dp"
            app:thumbnail="@{item.thumbnail}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@{item.nodeName}"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Music.mp3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:background="@null"
            android:onClick="@{() -> itemOperation.openItemOptionPanel(item)}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_dots_vertical_grey"
            app:tint="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="72dp"
            android:background="@color/disable_fab_chat_call" />
    </FrameLayout>
</layout>
