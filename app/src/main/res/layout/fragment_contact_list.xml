<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bg_requests"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/section_requests"
        android:textAllCaps="true"
        android:textAppearance="?textAppearanceButton"
        android:textColor="?colorSecondary"
        app:layout_constraintBottom_toBottomOf="@id/bg_requests"
        app:layout_constraintStart_toStartOf="@id/bg_requests"
        app:layout_constraintTop_toTopOf="@id/bg_requests" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_request_counter"
        style="@style/Widget.Mega.Chip.New"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/txt_requests"
        app:layout_constraintStart_toEndOf="@id/txt_requests"
        app:layout_constraintTop_toTopOf="@id/txt_requests"
        tools:text="1"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider_btn_requests"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_alpha_012"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_requests" />

    <View
        android:id="@+id/bg_groups"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_btn_requests" />

    <TextView
        android:id="@+id/txt_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/section_groups"
        android:textAllCaps="true"
        android:textAppearance="?textAppearanceButton"
        android:textColor="?colorSecondary"
        app:layout_constraintBottom_toBottomOf="@id/bg_groups"
        app:layout_constraintStart_toStartOf="@id/bg_groups"
        app:layout_constraintTop_toTopOf="@id/bg_groups" />

    <View
        android:id="@+id/divider_btn_groups"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_alpha_012"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_groups" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_contacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_btn_groups"
        tools:listitem="@layout/item_contact_data" />

    <TextView
        android:id="@+id/view_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="@string/context_empty_contacts"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Mega.Body2"
        android:visibility="gone"
        app:drawableTopCompat="@drawable/ic_zero_contacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add_white" />

</androidx.constraintlayout.widget.ConstraintLayout>
