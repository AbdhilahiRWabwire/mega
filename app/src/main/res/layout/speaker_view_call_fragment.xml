<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rounded="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/speaker_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <mega.privacy.android.app.components.RoundedImageView
        android:id="@+id/speaker_avatar_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_call"
        app:layout_constraintBottom_toBottomOf="@id/speaker_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/speaker_video"
        rounded:border_color="@color/white_alpha_030"
        rounded:border_width="3dp"
        rounded:corner_radius="60dp" />

    <ImageView
        android:id="@+id/speaker_on_hold_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call_hold_big"
        app:layout_constraintBottom_toBottomOf="@id/speaker_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/speaker_video" />

    <ImageView
        android:id="@+id/speaker_mute_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_mic_off_contact"
        app:layout_constraintBottom_toBottomOf="@id/speaker_video"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/quality_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bad_connection"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/speaker_video"
        app:layout_constraintStart_toEndOf="@id/speaker_mute_icon" />

<!--    <com.zhpan.bannerview.BannerViewPager-->
<!--        android:id="@+id/list_view_pager"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/speaker_video" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/participants_horizontal_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speaker_video" />
</androidx.constraintlayout.widget.ConstraintLayout>