<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/join_call_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_call_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textAppearance="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/description_call_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_gravity="start"
            android:layout_marginBottom="31dp"
            android:textAppearance="@style/MaterialAlertDialog.MaterialComponents.Body.Text"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/first_button"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="12dp"
                android:text="@string/hold_and_join_call_incoming"
                android:visibility="gone"/>
            <Button
                android:id="@+id/second_button"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="12dp"
                android:text="@string/end_and_join_call_incoming"
                android:visibility="gone"/>
            <Button
                android:id="@+id/cancel_button"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:text="@string/general_cancel"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>