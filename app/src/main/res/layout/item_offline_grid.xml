<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/offline_grid_item_layout"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_margin="2dp"
	android:background="@drawable/background_item_grid"
	android:descendantFocusability="blocksDescendants"
	android:padding="1dp">
	<RelativeLayout
		android:id="@+id/item_file_grid_folder"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/background_item_grid_new"
		android:visibility="visible">
		<RelativeLayout
			android:id="@+id/file_grid_thumbnail_layout"
			android:layout_width="match_parent"
			android:layout_height="56dp">
			<ImageView
				android:id="@+id/offline_grid_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:background="@null"
				android:scaleType="fitCenter"/>
			<TextView
				android:id="@+id/offline_grid_filename"
				android:layout_width="110dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginRight="8dp"
				android:layout_toRightOf="@+id/offline_grid_icon"
				android:ellipsize="middle"
				android:singleLine="true"
				android:textColor="#DE000000"
				android:textSize="14sp"/>
			<ImageButton
				android:id="@+id/offline_grid_three_dots"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:background="@null"
				android:src="@drawable/ic_dots_vertical_grey"/>
		</RelativeLayout>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/item_file_grid_file"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/background_item_grid_new"
		android:visibility="gone">
		<RelativeLayout
			android:id="@+id/file_grid_thumbnail_layout_for_file"
			android:layout_width="match_parent"
			android:layout_height="172dp">
			<ImageView
				android:id="@+id/file_grid_thumbnail"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_centerInParent="true"
				android:scaleType="fitXY"
				android:paddingTop="1dp"
				android:paddingRight="1dp"
				android:paddingLeft="1dp"/>
			<ImageView
				android:id="@+id/file_grid_selected"
				android:layout_width="23dp"
				android:layout_height="23dp"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:layout_marginLeft="7dp"
				android:layout_marginTop="7dp"/>
			<ImageView
				android:id="@+id/file_grid_icon_for_file"
				android:layout_width="88dp"
				android:layout_height="88dp"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:background="@null"
				android:scaleType="fitCenter"/>
		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/black_12_alpha"
			android:layout_below="@+id/file_grid_thumbnail_layout_for_file"/>
		<RelativeLayout
			android:id="@+id/offline_grid_bottom_container"
			android:layout_width="match_parent"
			android:layout_height="47dp"
			android:layout_below="@+id/file_grid_thumbnail_layout_for_file">
			<TextView
				android:id="@+id/file_grid_filename_for_file"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@+id/file_grid_three_dots_for_file"
				android:layout_centerVertical="true"
				android:layout_marginLeft="8dp"
				android:ellipsize="middle"
				android:singleLine="true"
				android:textColor="#DE000000"
				android:textSize="14sp"/>
			<ImageButton
				android:id="@+id/file_grid_three_dots_for_file"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:background="@null"
				android:src="@drawable/ic_dots_vertical_grey"/>
		</RelativeLayout>
	</RelativeLayout>
	<!--no use in grid-->
	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone">
		<!--<ImageView-->
			<!--android:id="@+id/offline_grid_thumbnail"-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="match_parent"-->
			<!--android:layout_centerHorizontal="true"-->
			<!--android:layout_centerVertical="true"-->
			<!--android:scaleType="fitXY"-->
			<!--android:visibility="gone"/>-->
		<View
			android:id="@+id/offline_grid_separator"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/new_background_fragment"
			android:visibility="gone"/>
		<TextView
			android:id="@+id/offline_grid_filesize"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="7dp"
			android:layout_marginLeft="12dp"
			android:ellipsize="end"
			android:maxLines="1"
			android:textColor="@color/file_list_second_row"
			android:textSize="12sp"
			android:visibility="gone"/>
	</FrameLayout>
</RelativeLayout>