<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/versions_main_layout"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_versions_file"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.Megaactionbar"
        app:titleTextAppearance="@style/ToolbarTitle"
        app:theme="@style/Theme.Megaactionbar"
        tools:context=".FolderLinkActivityLollipop" />


        <RelativeLayout
            android:id="@+id/file_contact_list_browser_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_versions_file" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_versions_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="multipleChoice" />

            <ImageView
                android:id="@+id/versions_file_empty_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/versions_file_empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/file_contact_list_empty_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/standard_margin"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />
        </RelativeLayout>
 </RelativeLayout>