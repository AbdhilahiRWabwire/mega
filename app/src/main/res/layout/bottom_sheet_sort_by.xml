<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="9dp"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="12dp"
      android:text="@string/action_sort_by"
      android:textColor="@color/homepage_content"
      android:textSize="16sp"
      />

  <TextView
      android:id="@+id/sort_by_name_asc"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:gravity="center_vertical"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:textColor="@color/homepage_content"
      android:textSize="16sp"
      tools:text="Name     Ascending"
      tools:textColor="@color/accentColor"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="16dp"
      android:background="@color/sliding_panel_separator"
      />

  <TextView
      android:id="@+id/sort_by_name_desc"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:gravity="center_vertical"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:textColor="@color/homepage_content"
      android:textSize="16sp"
      tools:text="Name     Descending"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="16dp"
      android:background="@color/sliding_panel_separator"
      />

  <TextView
      android:id="@+id/sort_by_newest_date"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:gravity="center_vertical"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:text="@string/sort_by_newest_date"
      android:textColor="@color/homepage_content"
      android:textSize="16sp"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="16dp"
      android:background="@color/sliding_panel_separator"
      />

  <TextView
      android:id="@+id/sort_by_oldest_date"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:gravity="center_vertical"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:text="@string/sort_by_oldest_date"
      android:textColor="@color/homepage_content"
      android:textSize="16sp"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="16dp"
      android:background="@color/sliding_panel_separator"
      />

  <TextView
      android:id="@+id/sort_by_largest_size"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:gravity="center_vertical"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:text="@string/sort_by_largest_size"
      android:textColor="@color/homepage_content"
      android:textSize="16sp"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="16dp"
      android:background="@color/sliding_panel_separator"
      />

  <TextView
      android:id="@+id/sort_by_smallest_size"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:gravity="center_vertical"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:text="@string/sort_by_smallest_size"
      android:textColor="@color/homepage_content"
      android:textSize="16sp"
      />

</LinearLayout>
