<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="mega.privacy.android.app.fragments.photos.PhotosViewModel" />

        <variable
            name="actionModeViewModel"
            type="mega.privacy.android.app.fragments.photos.ActionModeViewModel" />

        <variable
            name="item"
            type="mega.privacy.android.app.fragments.photos.PhotoNode" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/photo_list_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_image_thumbnail" />

        <TextView
            android:id="@+id/photo_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textColor="@color/file_list_first_row"
            android:textSize="16sp"
            android:text="@{item.node.name}"
            app:layout_constraintStart_toEndOf="@id/photo_list_thumbnail"
            app:layout_constraintTop_toTopOf="@id/photo_list_thumbnail"
            tools:text="2020-05-25 22.30.21.jpg" />

        <TextView
            android:id="@+id/photo_list_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/file_list_second_row"
            android:textSize="14sp"
            android:text="@{String.valueOf(item.node.size)}"
            app:layout_constraintStart_toStartOf="@id/photo_list_name"
            app:layout_constraintTop_toBottomOf="@id/photo_list_name"
            tools:text="8.27 MB" />

        <TextView
            android:id="@+id/photo_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/file_list_second_row"
            android:textSize="14sp"
            android:text="@{String.valueOf(item.node.modificationTime)}"
            app:layout_constraintStart_toEndOf="@id/photo_list_size"
            app:layout_constraintTop_toTopOf="@id/photo_list_size"
            tools:text="June 2020" />

        <ImageView
            android:id="@+id/file_list_three_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:src="@drawable/ic_dots_vertical_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

