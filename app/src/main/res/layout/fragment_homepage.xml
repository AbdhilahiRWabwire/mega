<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/homepage_background"
        tools:context=".lollipop.managerSections.HomepageFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <mega.privacy.android.app.components.search.FloatingSearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include layout="@layout/homepage_category" />

            <include
                android:id="@+id/banner"
                layout="@layout/homepage_banner" />
        </LinearLayout>

        <include layout="@layout/homepage_bottom_sheet" />

        <View
            android:id="@+id/view_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="@dimen/mask_view_alpha"
            android:background="@color/textGrey"
            android:clickable="true"
            android:elevation="@dimen/elevation_low"
            android:visibility="gone" />

        <include layout="@layout/homepage_fabs" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
