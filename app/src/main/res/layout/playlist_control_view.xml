<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:id="@+id/container_exo_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/relative_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exo_progress"
            android:background="@color/grey_800"
            android:paddingTop="8dp">

            <TextView
                android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="Roboto"
                android:includeFontPadding="false"
                android:paddingStart="8dp"
                android:textColor="@color/white_alpha_087"
                android:textSize="12sp" />

            <TextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="Roboto"
                android:includeFontPadding="false"
                android:paddingEnd="8dp"
                android:textColor="@color/white_alpha_087"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/container_control_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exo_duration"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp">

                <ImageButton
                    android:id="@id/exo_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="80dp"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:src="@drawable/exo_controls_previous"
                    app:tint="@color/white_alpha_054" />

                <RelativeLayout
                    android:id="@+id/play_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageButton
                        android:id="@id/exo_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:src="@drawable/ic_play"
                        app:tint="@color/white_alpha_054" />

                    <ImageButton
                        android:id="@id/exo_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:src="@drawable/ic_pause_black"
                        app:tint="@color/white_alpha_054" />

                </RelativeLayout>

                <ImageButton
                    android:id="@id/exo_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="80dp"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:src="@drawable/exo_controls_next"
                    app:tint="@color/white_alpha_054" />

            </RelativeLayout>

        </RelativeLayout>

        <mega.privacy.android.app.components.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="-14dp"
            android:layout_weight="1" />

    </RelativeLayout>

</RelativeLayout>