<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transfer_overquota_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/title_depleted_transfer_overquota"
            android:textColor="@color/name_my_account"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_transfer_overquota"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/transfer_quota_empty" />

        <TextView
            android:id="@+id/text_transfer_overquota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/dialog_text"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/transfer_overquota_button_dissmiss"
                style="@style/TransparentBackgroundButtonWithoutBorder"
                android:layout_marginEnd="8dp"
                android:text="@string/general_dismiss" />

            <Button
                android:id="@+id/transfer_overquota_button_payment"
                style="@style/TransparentBackgroundButtonWithoutBorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>