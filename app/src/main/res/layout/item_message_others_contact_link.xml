<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/others_contact_link_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/others_contact_link_message_layout"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_contact_message_stroke">

        <RelativeLayout
            android:id="@+id/others_contact_link_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_background_text_rich_link"
            app:layout_constraintTop_toTopOf="parent">

            <mega.privacy.android.app.components.twemoji.EmojiTextView
                android:id="@+id/others_contact_link_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:autoLink="web"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.Mega.Body2.Variant4"
                android:textColorLink="@color/grey_087_white"
                app:emojiSize="14sp"
                tools:text="This is my contact link https://mega.nz/C!Cs1g0BxL" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/others_contact_link_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            app:layout_constraintTop_toBottomOf="@+id/others_contact_link_text_layout">

            <mega.privacy.android.app.components.RoundedImageView
                android:id="@+id/others_contact_link_avatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="12dp"
                android:scaleType="fitCenter"
                app:border_color="@color/white"
                app:border_width="2dp"
                app:corner_radius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <mega.privacy.android.app.components.twemoji.EmojiTextView
                android:id="@+id/others_contact_link_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.Mega.Body1"
                app:emojiSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/others_contact_link_avatar"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Abbas Brahim" />

            <mega.privacy.android.app.components.twemoji.EmojiTextView
                android:id="@+id/others_contact_link_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="18dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.Mega.Body2"
                app:emojiSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/others_contact_link_avatar"
                app:layout_constraintTop_toBottomOf="@+id/others_contact_link_name"
                tools:text="abbasbrahim@gmail.com" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/others_contact_link_forward"
        style="@style/MessageForwardIconStyleEnd"
        android:layout_toEndOf="@+id/others_contact_link_message_layout"
        tools:ignore="ContentDescription" />

</RelativeLayout>