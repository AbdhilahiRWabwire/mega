<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/inbox_grid_content_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:background="@color/grey_020_white_012">

			<TextView
				android:id="@+id/inbox_content_grid_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:textColor="?android:attr/textColorSecondary"
				android:layout_marginStart="72dp"
				android:textSize="14sp" />
    </RelativeLayout>

    <mega.privacy.android.app.components.NewGridRecyclerView
        android:id="@+id/inbox_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_centerHorizontal="true"
		android:layout_centerInParent="true"
        android:choiceMode="multipleChoice" 
		android:layout_below="@id/inbox_grid_content_text_layout"
		android:columnWidth="172dp"
		android:paddingRight="4dp"
		android:paddingLeft="4dp"/>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center_horizontal">

		<ImageView
			android:id="@+id/inbox_grid_empty_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" />

		<LinearLayout
			android:id="@+id/inbox_grid_empty_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_below="@id/inbox_grid_empty_image"
			android:layout_centerHorizontal="true">
			<TextView
				android:id="@+id/inbox_grid_empty_text_first"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="@style/TextAppearance.Mega.Body2.Secondary.Variant.AllCaps"/>
		</LinearLayout>
	</RelativeLayout>

</RelativeLayout>