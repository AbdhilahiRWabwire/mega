<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mega.privacy.android.app.imageviewer.ImageViewerActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/images_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_black"
        app:defaultNavHost="true"
        tools:navGraph="@navigation/nav_image_viewer" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:backgroundTint="@color/white_alpha_070_grey_alpha_070"
        android:minHeight="?attr/actionBarSize" />
</FrameLayout>
