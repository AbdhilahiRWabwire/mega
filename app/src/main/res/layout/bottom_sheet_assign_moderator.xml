<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_900"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/no_moderator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:text="@string/meeting_call_screen_title_of_bottom_panel_to_assign_another_host"
            android:textAppearance="@style/TextAppearance.Mega.Subtitle1.20sp.White087"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/explanation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:text="@string/meeting_call_screen_description_of_bottom_panel_to_assign_another_host"
            android:textAppearance="@style/TextAppearance.Mega.Subtitle2.Normal.White87.16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/no_moderator" />

        <TextView
            android:id="@+id/assign_moderator"
            style="@style/BottomSheetCallPositiveItem"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="@string/meeting_call_screen_title_of_bottom_panel_to_assign_another_host"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/explanation" />

        <TextView
            android:id="@+id/leave_anyway"
            style="@style/BottomSheetCallNegativeItem"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/calls_call_screen_bottom_panel_leave_call_option"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/assign_moderator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>