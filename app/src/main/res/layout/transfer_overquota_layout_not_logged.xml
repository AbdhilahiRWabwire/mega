<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="344dp"
    android:layout_height="395dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/not_logged_transfer_overquota_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:textColor="@color/primary_text"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/not_logged_image_transfer_overquota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/not_logged_text_transfer_overquota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:textColor="@color/secondary_text"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/not_logged_transfer_overquota_button_dissmiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:background="@android:color/transparent"
                android:text="@string/general_dismiss"
                android:layout_marginTop="35dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="right"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/not_logged_transfer_overquota_button_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:background="@android:color/transparent"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="right"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/not_logged_transfer_overquota_button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:background="@android:color/transparent"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="right"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:stateListAnimator="@null"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>