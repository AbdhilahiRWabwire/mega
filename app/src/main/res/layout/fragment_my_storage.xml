<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/my_storage_complete_relative_layout"
	android:layout_width="match_parent"
	android:background="@color/white"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/my_storage_parent_linear_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/overall_usage_label"
			android:textColor="@color/name_my_account"
			android:layout_marginTop="9dp"
			android:textSize="14sp"/>

		<LinearLayout
			android:id="@+id/storage_container"
			android:layout_width="match_parent"
			android:layout_height="72dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/storage_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="@color/mail_my_account"
				android:text="@string/general_storage"
				android:layout_marginTop="14dp"/>

			<TextView
				android:id="@+id/used_storage_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:layout_marginTop="8dp"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/storage_separator"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/divider_upgrade_account"
			android:orientation="horizontal" />

		<LinearLayout
			android:id="@+id/transfer_container"
			android:layout_width="match_parent"
			android:layout_height="72dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/transfer_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:text="@string/transfer_label"
				android:layout_marginTop="14dp"/>

			<TextView
				android:id="@+id/used_transfer_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:textColor="@color/accentColor"
				android:layout_marginTop="8dp"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/transfer_separator"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/divider_upgrade_account"
			android:orientation="horizontal" />



		<!--Usage Storage-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="24dp"
			android:layout_marginBottom="24dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/usage_storage_details_label"
				android:textColor="@color/name_my_account"
				android:textSize="14sp"/>

			<!--cloud drive-->
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_centerVertical="true"
				android:paddingTop="16dp">

				<TextView
					android:id="@+id/my_storage_account_cloud_storage_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:text="@string/section_cloud_drive"
					android:textSize="14sp"
					android:textColor="@color/mail_my_account"/>

				<TextView
					android:id="@+id/my_storage_account_cloud_storage_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:textSize="14sp"
					android:textColor="@color/name_my_account"/>

				<LinearLayout
					android:id="@+id/cloud_drive_separator"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/divider_upgrade_account"
					android:orientation="horizontal"
					android:layout_alignParentBottom="true"/>

			</RelativeLayout>

			<!--inbox-->
			<RelativeLayout
				android:id="@+id/inbox_storage_container"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_centerVertical="true"
				android:paddingTop="16dp">

				<TextView
					android:id="@+id/my_storage_account_inbox_storage_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:text="@string/section_inbox"
					android:textSize="14sp"
					android:textColor="@color/mail_my_account"/>

				<TextView
					android:id="@+id/my_storage_account_inbox_storage_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:textSize="14sp"
					android:textColor="@color/name_my_account"/>

				<LinearLayout
					android:id="@+id/inbox_separator"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/divider_upgrade_account"
					android:orientation="horizontal"
					android:layout_alignParentBottom="true"/>

			</RelativeLayout>

			<!--incoming shares-->
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_centerVertical="true"
				android:paddingTop="16dp">

				<TextView
					android:id="@+id/my_storage_account_incoming_storage_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:text="@string/title_incoming_shares_explorer"
					android:textSize="14sp"
					android:textColor="@color/mail_my_account"/>

				<TextView
					android:id="@+id/my_storage_account_incoming_storage_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:textSize="14sp"
					android:textColor="@color/name_my_account"/>

				<LinearLayout
					android:id="@+id/incoming_separator"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/divider_upgrade_account"
					android:orientation="horizontal"
					android:layout_alignParentBottom="true"/>

			</RelativeLayout>

			<!--rubbish bin-->
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_centerVertical="true"
				android:paddingTop="16dp">

				<TextView
					android:id="@+id/my_storage_account_rubbish_storage_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:text="@string/section_rubbish_bin"
					android:textSize="14sp"
					android:textColor="@color/mail_my_account"/>

				<TextView
					android:id="@+id/my_storage_account_rubbish_storage_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:textSize="14sp"
					android:textColor="@color/name_my_account"/>

				<LinearLayout
					android:id="@+id/rubbish_separator"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/divider_upgrade_account"
					android:orientation="horizontal"
					android:layout_alignParentBottom="true"/>

			</RelativeLayout>

			<!--Previous versions-->
			<RelativeLayout
				android:id="@+id/previous_versions_storage_container"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_centerVertical="true"
				android:paddingTop="16dp">

				<TextView
					android:id="@+id/my_storage_account_previous_versions_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:text="@string/file_properties_folder_previous_versions"
					android:textSize="14sp"
					android:textColor="@color/mail_my_account"/>

				<TextView
					android:id="@+id/my_storage_account_previous_versions_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:textSize="14sp"
					android:textColor="@color/name_my_account"/>

			</RelativeLayout>

		</LinearLayout>

	</LinearLayout>

</ScrollView>