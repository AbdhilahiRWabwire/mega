<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/node_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#99000000"
        />

    <RadioGroup
        android:id="@+id/radio_group_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        >

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_label_red"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:button="@drawable/selector_label"
            android:minWidth="0dp"
            android:paddingStart="32dp"
            android:text="Red"
            app:buttonTint="@color/label_red"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_label_orange"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:button="@drawable/selector_label"
            android:minWidth="0dp"
            android:paddingStart="32dp"
            android:text="Orange"
            app:buttonTint="@color/label_orange"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_label_yellow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:button="@drawable/selector_label"
            android:minWidth="0dp"
            android:paddingStart="32dp"
            android:text="Yellow"
            app:buttonTint="@color/label_yellow"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_label_green"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:button="@drawable/selector_label"
            android:minWidth="0dp"
            android:paddingStart="32dp"
            android:text="Green"
            app:buttonTint="@color/label_green"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_label_blue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:button="@drawable/selector_label"
            android:minWidth="0dp"
            android:paddingStart="32dp"
            android:text="Blue"
            app:buttonTint="@color/label_blue"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_label_purple"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:button="@drawable/selector_label"
            android:minWidth="0dp"
            android:paddingStart="32dp"
            android:text="Purple"
            app:buttonTint="@color/label_purple"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_label_grey"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:button="@drawable/selector_label"
            android:minWidth="0dp"
            android:paddingStart="32dp"
            android:text="Grey"
            app:buttonTint="@color/label_grey"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/txt_remove_label"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_close_white"
        android:drawablePadding="32dp"
        android:drawableTint="#F30C14"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Remove label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F30C14"
        android:visibility="gone"
        tools:visibility="visible"
        />

</LinearLayout>
