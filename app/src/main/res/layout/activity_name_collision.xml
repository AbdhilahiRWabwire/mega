<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".namecollision.NameCollisionActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/already_exists_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="A file named IMG000012.jpeg already exists in this location." />

            <TextView
                android:id="@+id/select_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/already_exists_text"
                tools:text="Select the file you want to keep" />

            <View
                android:id="@+id/header_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/grey_012_white_012"
                app:layout_constraintTop_toBottomOf="@+id/select_text" />

            <TextView
                android:id="@+id/first_option_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/header_separator"
                tools:text="The current version of the file will be replaced with the file you are uploading." />

            <TextView
                android:id="@+id/learn_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/first_option_info"
                android:text="@string/learn_more_option"/>

            <Button
                android:id="@+id/first_option_button"
                style="@style/Widget.Mega.Button.Transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_option_info"
                tools:text="UPLOAD AND REPLACE" />

            <View
                android:id="@+id/first_option_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@color/grey_012_white_012"
                app:layout_constraintTop_toBottomOf="@+id/first_option_button" />

            <TextView
                android:id="@+id/middle_option_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/first_option_separator"
                tools:text="No files will be changed. You will keep the file below:" />

            <Button
                android:id="@+id/middle_option_button"
                style="@style/Widget.Mega.Button.Transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/middle_option_info"
                tools:text="DON'T UPLOAD" />

            <View
                android:id="@+id/middle_option_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@color/grey_012_white_012"
                app:layout_constraintTop_toBottomOf="@+id/middle_option_button" />

            <TextView
                android:id="@+id/last_option_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/middle_option_separator"
                tools:text="The file you are uploading will be renamed as:" />

            <Button
                android:id="@+id/last_option_button"
                style="@style/Widget.Mega.Button.Transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/last_option_info"
                tools:text="UPLOAD AND RENAME" />

            <CheckBox
                android:id="@+id/apply_for_all_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/last_option_button"
                tools:text="@string/file_apply_for_all" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>