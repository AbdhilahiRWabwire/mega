<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usage_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_020_grey_087"
    android:fillViewport="true"
    android:paddingStart="14dp"
    android:paddingEnd="14dp"
    android:transitionName="end_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/usage_view_layout"
            layout="@layout/my_account_usage_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/payment_alert"
            layout="@layout/my_account_payment_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="@string/usage_storage_details_label"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp" />

        <!--cloud drive-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/my_storage_account_cloud_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/my_storage_account_cloud_storage_text"
                android:text="@string/section_cloud_drive"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_storage_account_cloud_storage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                tools:text="65.05 GB" />

            <View
                android:id="@+id/cloud_drive_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_012_white_012" />

        </RelativeLayout>

        <!--inbox-->
        <RelativeLayout
            android:id="@+id/inbox_storage_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/my_storage_account_inbox_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/my_storage_account_inbox_storage_text"
                android:text="@string/section_inbox"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_storage_account_inbox_storage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                tools:text="21.35 GB" />

            <View
                android:id="@+id/inbox_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_012_white_012" />

        </RelativeLayout>

        <!--incoming shares-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/my_storage_account_incoming_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/my_storage_account_incoming_storage_text"
                android:text="@string/title_incoming_shares_explorer"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_storage_account_incoming_storage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                tools:text="680.1 GB" />

            <View
                android:id="@+id/incoming_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_012_white_012" />

        </RelativeLayout>

        <!--rubbish bin-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/my_storage_account_rubbish_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/my_storage_account_rubbish_storage_text"
                android:text="@string/section_rubbish_bin"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_storage_account_rubbish_storage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                tools:text="673.5 GB" />

            <View
                android:id="@+id/rubbish_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_012_white_012" />

        </RelativeLayout>

        <!--Previous versions-->
        <RelativeLayout
            android:id="@+id/previous_versions_storage_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/my_storage_account_previous_versions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/my_storage_account_previous_versions_text"
                android:text="@string/file_properties_folder_previous_versions"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_storage_account_previous_versions_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>