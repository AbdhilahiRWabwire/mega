<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rounded="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="88dp"
    android:layout_height="120dp"
    android:layout_marginStart="19dp"
    android:layout_marginTop="13dp"
    android:layout_marginEnd="19dp"
    android:layout_marginBottom="13dp"
    android:background="@drawable/self_feed_floating_window_background">

    <mega.privacy.android.app.components.RoundedImageView
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        rounded:border_color="@color/white_alpha_030"
        rounded:border_width="2.73dp"
        rounded:corner_radius="60dp" />

    <TextureView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <mega.privacy.android.app.components.RoundedImageView
        android:id="@+id/micro_off_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@drawable/mic_off_participant_icon_thin"
        android:background="@drawable/participant_mic_off_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        rounded:corner_radius="16dp" />

    <ImageView
        android:id="@+id/on_hold_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_meeting_pause"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
