<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/progress_bar_normal_background"
                android:startColor="@color/progress_bar_normal_background" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="90"
                    android:endColor="#771997e1"
                    android:startColor="#770e75af" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="90"
                    android:endColor="?attr/colorSecondary"
                    android:startColor="?attr/colorSecondary" />
            </shape>
        </clip>
    </item>
</layer-list>
