<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.Mega" parent="Base.Theme.Mega" >
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/accentColor</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/black</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/transparent</item>
        <item name="colorError">@color/dark_primary_color</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accentColor</item>

        <!-- The color applied to icons/controls in their normal state.-->
        <item name="colorControlNormal">@color/black</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorAccent</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back_white</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <item name="actionBarTheme">@style/Widget.ActionMode.ActionBar</item>
        <item name="elevation">0dp</item>

        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
        <item name="preferenceTheme">@style/PreferenceStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
</resources>