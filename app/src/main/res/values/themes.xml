<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.Mega" parent="Base.Theme.Mega" />
    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.Mega" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/background</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>

        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorError">@color/error</item>

        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- Same to colorOnPrimary: rgba(0,0,0,0.87) -->
        <item name="colorOnSurface">@color/color_on_primary</item>

        <!-- The color applied to icons/controls in their normal state -->
<!--        <item name="colorControlNormal">@color/control_normal</item>-->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorSecondary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back_white</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <item name="actionBarTheme">@style/Widget.ActionMode.ActionBar</item>
        <item name="elevation">0dp</item>

        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <item name="preferenceTheme">@style/PreferenceStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <item name="borderlessButtonStyle">@style/BorderlessButton</item>

        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>

        <item name="greyBackgroundColor">@color/grey_background</item>
        <!-- Used by the hint text color of TextInputLayout -->
        <item name="textColorHint">@color/text_hint</item>


<!--        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>-->

<!--        <item name="textAppearanceHeadline1">@style/TextAppearance.Mega.Headline1</item>-->
        <!--<item name="textAppearanceHeadline2">@style/TextAppearance.MyTheme.Headline2</item>-->
        <!--<item name="textAppearanceHeadline3">@style/TextAppearance.MyTheme.Headline3</item>-->
        <!--<item name="textAppearanceHeadline4">@style/TextAppearance.MyTheme.Headline4</item>-->
        <item name="textAppearanceHeadline5">@style/TextAppearance.Mega.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Mega.Headline6</item>
        <!--<item name="textAppearanceSubtitle1">@style/TextAppearance.MyTheme.Subtitle1</item>-->
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Mega.Subtitle2</item>
        <!--<item name="textAppearanceBody1">@style/TextAppearance.MyTheme.Body1</item>-->
        <item name="textAppearanceBody2">@style/TextAppearance.Mega.Body2</item>
        <!--<item name="textAppearanceButton">@style/TextAppearance.MyTheme.Button</item>-->
        <item name="textAppearanceCaption">@style/TextAppearance.Mega.Caption</item>
        <!--<item name="textAppearanceOverline">@style/TextAppearance.MyTheme.Overline</item>-->
    </style>
</resources>


